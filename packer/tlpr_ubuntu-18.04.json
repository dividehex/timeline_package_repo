{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "subnet_id": "subnet-0f7d7eedf80f0506b",
    "source_ami_filter": {
        "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
            "root-device-type": "ebs"
        },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "associate_public_ip_address": true,
    "ssh_username": "ubuntu",
    "ami_name": "tlpr-{{timestamp}}",
    "tags": {
        "Name": "Timeline Package Repo",
        "date_created": "{{timestamp}}",
        "onwer": "relops@mozilla.com",
        "generated_by": "Packer {{packer_version}}",
        "git_repo": "https://github.com/mozilla-platform-ops/timeline_package_repo"
    }
  }],
  "provisioners": [
      {
        "type": "shell",
        "inline": [ "sleep 30" ]
      },
      {
        "type": "shell",
        "inline": [
        "sudo curl -L https://github.com/docker/compose/releases/download/1.25.4/docker-compose-`uname -s`-`uname -m` -o /usr/local/bin/docker-compose",
        "sudo chmod 755 /usr/local/bin/docker-compose",
        "sudo apt update",
        "sudo apt-get -y upgrade",
        "sudo apt-get -y install apt-transport-https",
        "sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
        "sudo add-apt-repository -u -y \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) edge\"",
        "sudo apt-get -y install docker-ce",
        "sudo docker pull ubuntu:18.04",
        "sudo apt-get -y install nfs-common",
        "sudo apt-get -y install awscli",
        "sudo apt-get -y install python3-pip",
        "sudo pip3 install docker"
        ]
    }
  ]
}
